{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Datagrid Catalog",
    "description": "Definition of a datagrid catalog for Go and HTMX components",
    "type": "object",
    "required": [
        "version",
        "objects"
    ],
    "properties": {
        "version": {
            "type": "string",
            "description": "Catalog format version (e.g., '1.0')"
        },
        "title": {
            "type": "string",
            "description": "Human readable title of the catalog"
        },
        "icon": {
            "type": "string",
            "description": "Font Awesome or similar icon class"
        },
        "datagrid": {
            "type": "object",
            "properties": {
                "defaults": {
                    "type": "object",
                    "properties": {
                        "page_size": {
                            "type": "integer",
                            "default": 10
                        },
                        "sort_column": {
                            "type": "string"
                        },
                        "sort_direction": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        },
                        "filters": {
                            "type": "object"
                        },
                        "search": {
                            "type": "string"
                        }
                    }
                },
                "lovs": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "value"
                            ],
                            "anyOf": [
                                {
                                    "required": [
                                        "label"
                                    ]
                                },
                                {
                                    "required": [
                                        "labels"
                                    ]
                                }
                            ],
                            "properties": {
                                "value": {
                                    "type": [
                                        "string",
                                        "number",
                                        "integer",
                                        "boolean"
                                    ]
                                },
                                "label": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "object",
                                            "patternProperties": {
                                                "^[a-z]{2}$": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    ]
                                },
                                "labels": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-z]{2}$": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "operations": {
                    "type": "object",
                    "properties": {
                        "add": {
                            "type": "boolean"
                        },
                        "edit": {
                            "type": "boolean"
                        },
                        "delete": {
                            "type": "boolean"
                        }
                    }
                },
                "filters": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "required": [
                            "type"
                        ],
                        "properties": {
                            "column": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "text",
                                    "number",
                                    "boolean",
                                    "int_bool",
                                    "date"
                                ]
                            }
                        }
                    }
                },
                "columns": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "visible": {
                                "type": "boolean"
                            },
                            "labels": {
                                "type": "object",
                                "patternProperties": {
                                    "^[a-z]{2}$": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "searchable_columns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "objects": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "columns"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "default": "table"
                    },
                    "description": {
                        "type": "string"
                    },
                    "columns": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "name",
                                "type",
                                "labels"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                },
                                "primary_key": {
                                    "type": "boolean"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "labels": {
                                    "type": "object",
                                    "patternProperties": {
                                        "^[a-z]{2}$": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "lov": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "description": "SQL query for dynamic LOV"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "required": [
                                                    "value",
                                                    "label"
                                                ],
                                                "properties": {
                                                    "value": {
                                                        "type": [
                                                            "string",
                                                            "number",
                                                            "integer",
                                                            "boolean"
                                                        ]
                                                    },
                                                    "label": {
                                                        "oneOf": [
                                                            {
                                                                "type": "string"
                                                            },
                                                            {
                                                                "type": "object",
                                                                "patternProperties": {
                                                                    "^[a-z]{2}$": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}