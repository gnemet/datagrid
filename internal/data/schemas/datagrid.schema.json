{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Datagrid UI Schema",
    "description": "Validation for the UI/UX components of the catalog",
    "type": "object",
    "required": [
        "version",
        "datagrid",
        "title"
    ],
    "properties": {
        "version": {
            "$ref": "common.schema.json#/definitions/version"
        },
        "title": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "css_class": {
            "type": "string"
        },
        "type": {
            "enum": [
                "grid",
                "pivot"
            ],
            "default": "grid"
        },
        "datagrid": {
            "type": "object",
            "required": [
                "columns"
            ],
            "properties": {
                "iconStyleLibrary": {
                    "type": "string"
                },
                "operations": {
                    "type": "object",
                    "properties": {
                        "add": {
                            "type": "boolean"
                        },
                        "edit": {
                            "type": "boolean"
                        },
                        "delete": {
                            "type": "boolean"
                        }
                    }
                },
                "lovs": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "$ref": "common.schema.json#/definitions/lov_item"
                        }
                    }
                },
                "defaults": {
                    "type": "object",
                    "properties": {
                        "page_size_default": {
                            "type": "integer"
                        },
                        "page_size": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "default": [
                                10,
                                25,
                                50,
                                100
                            ]
                        },
                        "sort_column": {
                            "type": "string"
                        },
                        "sort_direction": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc",
                                "asc nulls first",
                                "asc nulls last",
                                "desc nulls first",
                                "desc nulls last"
                            ]
                        },
                        "rowStyles": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Cyclic row styles (e.g. alternating background colors)"
                        },
                        "filters": {
                            "type": "object",
                            "additionalProperties": true,
                            "description": "Default filter values"
                        }
                    }
                },
                "columns": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "visible": {
                                "type": "boolean"
                            },
                            "css": {
                                "type": "string"
                            },
                            "display": {
                                "type": "string"
                            },
                            "labels": {
                                "$ref": "common.schema.json#/definitions/multi_lang_label"
                            },
                            "icon": {
                                "type": "string"
                            },
                            "lov": {
                                "description": "Override LOV definition (string for dynamic SQL, array for static list)",
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "array",
                                        "items": {
                                            "$ref": "common.schema.json#/definitions/lov_item"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "filters": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "column": {
                                "type": "string"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "text",
                                    "number",
                                    "boolean",
                                    "int_bool",
                                    "date"
                                ]
                            }
                        }
                    }
                },
                "searchable": {
                    "type": "object",
                    "properties": {
                        "columns": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "operator": {
                            "type": "string",
                            "enum": [
                                "%",
                                "~",
                                "~*",
                                "~~",
                                "~~*",
                                "=",
                                "LIKE",
                                "ILIKE"
                            ],
                            "default": "%"
                        },
                        "threshold": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1,
                            "default": 0.3
                        }
                    }
                },
                "pivot": {
                    "type": "object",
                    "properties": {
                        "rows": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "column": {
                                                "type": "string"
                                            },
                                            "css": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "column"
                                        ]
                                    }
                                ]
                            }
                        },
                        "columns": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "column": {
                                                "type": "string"
                                            },
                                            "css": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "column"
                                        ]
                                    }
                                ]
                            }
                        },
                        "subtotals": {
                            "type": "boolean",
                            "default": false
                        },
                        "values": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "column": {
                                        "type": "string"
                                    },
                                    "func": {
                                        "type": "string",
                                        "enum": [
                                            "SUM",
                                            "AVG",
                                            "COUNT",
                                            "COUNT DISTINCT",
                                            "MIN",
                                            "MAX"
                                        ],
                                        "default": "SUM"
                                    },
                                    "label": {
                                        "type": "string"
                                    },
                                    "labels": {
                                        "$ref": "common.schema.json#/definitions/multi_lang_label"
                                    }
                                },
                                "required": [
                                    "column",
                                    "func"
                                ]
                            }
                        },
                        "multiplier": {
                            "type": "number",
                            "default": 1.0
                        }
                    },
                    "required": [
                        "rows",
                        "columns",
                        "values"
                    ]
                }
            }
        }
    }
}