{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Datagrid UI Schema",
    "description": "Validation for the UI/UX components of the catalog",
    "type": "object",
    "required": [
        "version",
        "datagrid",
        "title"
    ],
    "properties": {
        "version": {
            "$ref": "common.schema.json#/definitions/version"
        },
        "title": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "css_class": {
            "type": "string"
        },
        "type": {
            "description": "Primary display mode for the catalog data",
            "enum": [
                "grid",
                "pivot"
            ],
            "default": "grid"
        },
        "datagrid": {
            "type": "object",
            "description": "Core datagrid and pivot visualization settings",
            "required": [
                "columns"
            ],
            "properties": {
                "iconStyleLibrary": {
                    "type": "string",
                    "description": "Icon library used in templates (e.g., 'Phosphor' or 'FontAwesome'). Defaults to 'FontAwesome'."
                },
                "operations": {
                    "type": "object",
                    "description": "Enablement of CRUD UI operations",
                    "properties": {
                        "add": {
                            "type": "boolean",
                            "description": "Enable the 'Add Record' button"
                        },
                        "edit": {
                            "type": "boolean",
                            "description": "Enable row-level editing"
                        },
                        "delete": {
                            "type": "boolean",
                            "description": "Enable row-level deletion"
                        }
                    }
                },
                "lovs": {
                    "type": "object",
                    "description": "Global List of Values definitions indexed by field name",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "$ref": "common.schema.json#/definitions/lov_item"
                        }
                    }
                },
                "defaults": {
                    "type": "object",
                    "description": "Initial state for the grid on first load",
                    "properties": {
                        "page_size_default": {
                            "type": "integer",
                            "description": "The default number of records per page"
                        },
                        "page_size": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "description": "Available page size options for the user",
                            "default": [
                                10,
                                25,
                                50,
                                100
                            ]
                        },
                        "sort_column": {
                            "type": "string",
                            "description": "Field name to sort by initially"
                        },
                        "sort_direction": {
                            "type": "string",
                            "description": "Starting sort direction (e.g., 'asc' or 'desc')",
                            "enum": [
                                "asc",
                                "desc",
                                "asc nulls first",
                                "asc nulls last",
                                "desc nulls first",
                                "desc nulls last"
                            ]
                        },
                        "rowStyles": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Cyclic CSS styles applied to table rows sequentially"
                        },
                        "filters": {
                            "type": "object",
                            "additionalProperties": true,
                            "description": "Initial filter values (field: [value1, ...])"
                        }
                    }
                },
                "columns": {
                    "type": "object",
                    "description": "UI property overrides for table columns",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "visible": {
                                "type": "boolean",
                                "description": "Whether the column is shown by default"
                            },
                            "css": {
                                "type": "string",
                                "description": "Custom CSS classes for column cells"
                            },
                            "display": {
                                "type": "string",
                                "description": "Label pattern used in headers and tooltips (supports %field% placeholders)"
                            },
                            "labels": {
                                "$ref": "common.schema.json#/definitions/multi_lang_label",
                                "description": "Localized column headers"
                            },
                            "icon": {
                                "type": "string",
                                "description": "Icon class name displayed next to the label"
                            },
                            "lov": {
                                "description": "Inline LOV definition or reference to global LOV key",
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "array",
                                        "items": {
                                            "$ref": "common.schema.json#/definitions/lov_item"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "filters": {
                    "type": "object",
                    "description": "Filter definitions that enable UI filtering for specific columns",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "column": {
                                "type": "string",
                                "description": "Underlying database column for this filter"
                            },
                            "type": {
                                "type": "string",
                                "description": "UI input type for the filter",
                                "enum": [
                                    "text",
                                    "number",
                                    "boolean",
                                    "int_bool",
                                    "date"
                                ]
                            }
                        }
                    }
                },
                "searchable": {
                    "type": "object",
                    "description": "Global fuzzy search configuration",
                    "properties": {
                        "columns": {
                            "type": "array",
                            "description": "Columns included in the fuzzy search index",
                            "items": {
                                "type": "string"
                            }
                        },
                        "operator": {
                            "type": "string",
                            "description": "PostgreSQL operator (default: % for pg_trgm similarity)",
                            "enum": [
                                "%",
                                "~",
                                "~*",
                                "~~",
                                "~~*",
                                "=",
                                "LIKE",
                                "ILIKE"
                            ],
                            "default": "%"
                        },
                        "threshold": {
                            "type": "number",
                            "description": "Pg_trgm similarity threshold (0.0 to 1.0)",
                            "minimum": 0,
                            "maximum": 1,
                            "default": 0.3
                        }
                    }
                },
                "pivot": {
                    "type": "object",
                    "description": "Analytic pivot configuration",
                    "properties": {
                        "rows": {
                            "type": "array",
                            "description": "Dimensions defining the rows of the pivot grid",
                            "items": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "column": {
                                                "type": "string"
                                            },
                                            "css": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "column"
                                        ]
                                    }
                                ]
                            }
                        },
                        "columns": {
                            "type": "array",
                            "description": "Dimensions defining the columns of the pivot grid",
                            "items": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "column": {
                                                "type": "string"
                                            },
                                            "css": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "column"
                                        ]
                                    }
                                ]
                            }
                        },
                        "subtotals": {
                            "type": "boolean",
                            "description": "Enable rendering of intermediate and grand totals",
                            "default": false
                        },
                        "values": {
                            "type": "array",
                            "description": "Measures for aggregation in the pivot cells",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "column": {
                                        "type": "string",
                                        "description": "Database column to aggregate"
                                    },
                                    "func": {
                                        "type": "string",
                                        "description": "Aggregation function (e.g., 'SUM', 'AVG')",
                                        "enum": [
                                            "SUM",
                                            "AVG",
                                            "COUNT",
                                            "COUNT DISTINCT",
                                            "MIN",
                                            "MAX"
                                        ],
                                        "default": "SUM"
                                    },
                                    "label": {
                                        "type": "string",
                                        "description": "Header label for this specific measure"
                                    },
                                    "labels": {
                                        "$ref": "common.schema.json#/definitions/multi_lang_label",
                                        "description": "Localized header labels for the measure"
                                    }
                                },
                                "required": [
                                    "column",
                                    "func"
                                ]
                            }
                        },
                        "multiplier": {
                            "type": "number",
                            "description": "Global scale factor applied to all numeric values in the pivot results",
                            "default": 1.0
                        }
                    },
                    "required": [
                        "rows",
                        "columns",
                        "values"
                    ]
                }
            }
        }
    }
}