{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/gnemet/datagrid/main/schemas/common.schema.json",
    "title": "Common Datagrid Definitions",
    "definitions": {
        "multi_lang_label": {
            "type": "object",
            "description": "A map of ISO 639-1 language codes (e.g., 'en', 'hu') to localized strings",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string"
                }
            },
            "minProperties": 1,
            "additionalProperties": false
        },
        "lov_item": {
            "type": "object",
            "description": "A single entry in a List of Values (LOV) dropdown",
            "required": [
                "value"
            ],
            "anyOf": [
                {
                    "required": [
                        "label"
                    ]
                },
                {
                    "required": [
                        "labels"
                    ]
                }
            ],
            "properties": {
                "css": {
                    "type": "string",
                    "description": "CSS class applied to the cell when this value is selected"
                },
                "display": {
                    "type": "string",
                    "description": "Legacy display pattern with placeholders"
                },
                "rowStyle": {
                    "type": "string",
                    "description": "Inline CSS style applied to the entire row when this value is selected (e.g., 'background: #fee')"
                },
                "rowClass": {
                    "type": "string",
                    "description": "CSS class applied to the entire row when this value is selected (e.g., 'table-warning')"
                },
                "value": {
                    "type": [
                        "string",
                        "number",
                        "integer",
                        "boolean"
                    ],
                    "description": "The raw database value"
                },
                "label": {
                    "description": "The display text for this value",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "$ref": "#/definitions/multi_lang_label"
                        }
                    ]
                },
                "labels": {
                    "$ref": "#/definitions/multi_lang_label",
                    "description": "Localized labels for this value"
                }
            }
        },
        "version": {
            "type": "string",
            "description": "Semantic versioning in Major.Minor format (e.g., '1.0')",
            "pattern": "^[0-9]+\\.[0-9]+$"
        }
    }
}