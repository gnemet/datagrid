{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP Semantic Schema",
    "description": "Validation for the semantic/AI context of the catalog",
    "type": "object",
    "required": [
        "version",
        "objects"
    ],
    "properties": {
        "version": {
            "$ref": "common.schema.json#/definitions/version"
        },
        "objects": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "columns",
                    "description"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "minLength": 10
                    },
                    "columns": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "name",
                                "type"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "labels": {
                                    "$ref": "common.schema.json#/definitions/multi_lang_label"
                                },
                                "lov": {
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "$ref": "common.schema.json#/definitions/lov_item"
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "architectural_rules": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "usage_examples": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "intent": {
                                    "type": "string"
                                },
                                "sql": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}